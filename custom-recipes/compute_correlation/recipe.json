// This file is the descriptor for the Custom code recipe compute_correlation
{
    // Meta data for display purposes
    "meta" : {
        "label" : "Compute correlations between variables",
        "description" : "",
        "icon" : "icon-beaker",
        "iconColor": "blue"
    },

    "kind" : "PYTHON",
    
    "selectableFromDataset": "input",

    // Inputs and outputs are defined by roles. In the recipe's I/O tab, the user can associate one
    // or more dataset to each input and output role.

    // The "arity" field indicates whether the user can associate several datasets to the role ('NARY')
    // or at most one ('UNARY'). The "required" field indicates whether the user is allowed to
    // associate no dataset with the role.

    "inputRoles" : [
        {
            "name": "input",
            "label": "Input dataset",
            "description": "The dataset containing the raw data from which we'll compute correlations.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "outputRoles" : [
        {
            "name": "main_output",
            "label": "Output dataset",
            "description": "The dataset containing the correlations.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    // The field "params" holds a list of all the params
    // for wich the user will be prompted for values in the Settings tab of the recipe.

    // The available parameter types are:
    // STRING, INT, DOUBLE, BOOLEAN, PASSWORD, SELECT, MAP, COLUMN, COLUMNS, TEXTAREA

    "params": [
        {
            "name": "threshold",
            "label" : "Threshold",
            "type": "DOUBLE",
            "defaultValue" : 0,
            "description":"Correlations below the threshold will not appear in the output dataset",
            "mandatory" : true,
            "maxD": 1,
            "minD": 0
        },
        {
            "name": "filter_method",
            "label" : "Filter",
            "type": "SELECT",
            "defaultValue" : "none",
            "description": "Filter columns",
            "selectChoices": [
                {
                    "value": "none",
                    "label": "None"
                },
                {
                    "value": "remove",
                    "label": "Remove"
                },
                {
                    "value": "keep",
                    "label": "Keep"
                },
            ]
        },
        {
            "name": "col_multiple",
            "label" : "Columns (multiple)",
            "type": "COLUMNS",
            "description": "Keep empty for no filtering",
            "columnRole": "input",
            "visibilityCondition": "model.filter_method != 'none'"
        },
        {
            "name": "col_patterns",
            "label" : "Columns (pattern)",
            "type": "COLUMNS",
            "description":"Keep empty for no filtering",
            "visibilityCondition": "model.filter_method != 'none'"
        }
    ],

    // The field "resourceKeys" holds a list of keys that allows to limit the number
    // of concurrent executions and activities triggered by this recipe.
    //
    // Administrators can configure the limit per resource key in the Administration > Settings > Flow build
    // screen.

    "resourceKeys" : []

}
