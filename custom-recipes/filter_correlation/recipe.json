// This file is the descriptor for the Custom code recipe filter_correlation
{
    // Meta data for display purposes
    "meta" : {
        "label" : "Filter columns by correlation",
        "description" : "Remove the columns with high correlation",
        "icon" : "icon-filter",
        "iconColor": "blue"
    },

    "kind" : "PYTHON",
    

    // Inputs and outputs are defined by roles. In the recipe's I/O tab, the user can associate one
    // or more dataset to each input and output role.

    // The "arity" field indicates whether the user can associate several datasets to the role ('NARY')
    // or at most one ('UNARY'). The "required" field indicates whether the user is allowed to
    // associate no dataset with the role.

    "inputRoles" : [
        {
            "name": "input",
            "label": "Input dataset",
            "description": "The dataset containing the data from which we'll compute correlations.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
	],

	"outputRoles" : [
        {
            "name": "main_output",
            "label": "Output dataset",
            "description": "The dataset without the highly correlated columns.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    // The field "params" holds a list of all the params
    // for wich the user will be prompted for values in the Settings tab of the recipe.

    // The available parameter types are:
    // STRING, INT, DOUBLE, BOOLEAN, PASSWORD, SELECT, MAP, COLUMN, COLUMNS, TEXTAREA

    "params": [
        {
            "name": "condition",
            "label" : "Removal condition",
            "type": "SELECT",
            "defaultValue" : "above",
            "description":"Correlation condition to remove columns Columns with correlations above the absolute value of threshold will be removed",
            "selectChoices": [
                {
                    "value": "above",
                    "label": "above"
                },
                {
                    "value": "below",
                    "label": "below"
                },
            ]
        },
        {
            "name": "threshold",
            "label" : "Threshold",
            "type": "DOUBLE",
            "defaultValue" : 0.9,
            "maxD": 1,
            "minD": 0,
            "description":"Columns with correlations above the absolute value of threshold will be removed",
            "mandatory" : true
        },
        {
            "name": "keep",
            "label" : "Columns to keep",
            "type": "DATASET_COLUMNS ",
            "description":"Columns to keep"
        }
    ],
    
    // The field "resourceKeys" holds a list of keys that allows to limit the number
    // of concurrent executions and activities triggered by this recipe.
    //
    // Administrators can configure the limit per resource key in the Administration > Settings > Flow build
    // screen.

    "resourceKeys" : []

}
